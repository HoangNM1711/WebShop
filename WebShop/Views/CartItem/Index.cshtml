@model List<WebShop.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{  
    <script src="/Assets/Client/js/controller/CartController.js"></script>
}
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
                    <table class="table">
            <thead>
                <tr>
                    <td>Mã sản phẩm</td>
                    <td>Tên sản phẩm</td>
                    <td>Ảnh mô tả</td>
                    <td>Số lượng</td>
                    <td>Đơn giá</td>
                    <td>Thành tiền</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.Product.ID</td>
                        <td>@item.Product.Name</td>
                        <td><img src="@item.Product.Image" width="100" /></td>
                        <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                        <td>@item.Product.Price.GetValueOrDefault(0).ToString("0,0")</td>
                        <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("0,0"))</td>
                        <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xóa</a> </td>
                    </tr>
                }
            </tbody>
        </table>

        <button id="btnContinute" class="btn btn-primary">Tiếp tục mua</button>
        <button id="btnUpdate" class="btn btn-primary">Cập nhật giỏ hàng</button>
        <button id="btnDeleteAll" class="btn btn-primary">Xóa giỏ hàng</button>
        <button id="btnPay" class="btn btn-primary">Thanh toán</button>
        }
        else
        {
            <span class="alert alert-danger">Chưa có sản phẩm trong giỏ hàng</span>
        }
    </div>
</div>
        

