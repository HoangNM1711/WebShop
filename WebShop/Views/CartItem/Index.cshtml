@model List<WebShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
                    <table class="table">
            <thead>
                <tr>
                    <td>Mã sản phẩm</td>
                    <td>Tên sản phẩm</td>
                    <td>Ảnh mô tả</td>
                    <td>Số lượng</td>
                    <td>Đơn giá</td>
                    <td>Thành tiền</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.Product.ID</td>
                        <td>@item.Product.Name</td>
                        <td><img src="@item.Product.Image" width="100" /></td>
                        <td><input type="text" class="quantity" value="@item.Quantity" /></td>
                        <td>@item.Product.Price.GetValueOrDefault(0).ToString("0,0")</td>
                        <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("0,0"))</td>
                    </tr>
                }
            </tbody>
        </table>
        }
        else
        {
            <span class="alert alert-danger">Chưa có sản phẩm trong giỏ hàng</span>
        }
    </div>
</div>
        

